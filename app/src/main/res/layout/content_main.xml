<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="voice.niksh.com.nikeshvoice.MainActivity"
    >



    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Visa App - VFS"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:textSize="28dp">
    </TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Powered by IBM IIB"
        android:id="@+id/power"
        android:gravity="center"
        android:layout_below="@+id/text2"
        android:textSize="28dp"
        android:layout_centerHorizontal="true" />

    <EditText android:text="@+id/namef"
        android:id="@+id/namef"
        android:layout_below="@+id/power"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Name"
        android:layout_width="fill_parent">
    </EditText>
    <ImageButton android:text="@+id/Button01"
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/namef"

        android:onClick="getName"
        android:src="@android:drawable/ic_btn_speak_now">
    </ImageButton>



    <EditText android:text="@+id/age"
        android:id="@+id/age"
        android:layout_below="@+id/Button01"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Age"
        android:layout_width="fill_parent">
    </EditText>
    <ImageButton android:text="@+id/Button02"
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/age"
        android:onClick="getAge"
        android:src="@android:drawable/ic_btn_speak_now">
    </ImageButton>


    <EditText android:text="@+id/contact"
        android:id="@+id/contact"
        android:layout_below="@+id/Button02"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:hint="Enter Contact"
        android:layout_width="fill_parent">
    </EditText>
    <ImageButton android:text="@+id/Button03"
        android:id="@+id/Button03"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/contact"
        android:onClick="getContact"
        android:src="@android:drawable/ic_btn_speak_now">
    </ImageButton>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:id="@+id/button"
        android:onClick="processVisaForm"
        android:layout_below="@+id/Button03"
        android:layout_marginTop="80dp"
        android:layout_alignRight="@+id/power"
        android:layout_alignEnd="@+id/power"
        android:layout_alignLeft="@+id/text2"
        android:layout_alignStart="@+id/text2" />


</RelativeLayout>
